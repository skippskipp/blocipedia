<div class="jumbotron">
  <div class="container">
    <div>
      <h1>
        <%= @wiki.title %> <br>
        <small>
          submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.username %>
        </small>
      </h1>
    </div>
    <div class="row">
      <div class="col-md-8">
          <p><%= @wiki.body %></p>
        <div class="col-md-4">
          <%= link_to "Edit", edit_wiki_path(@wiki, @wiki), class: 'btn btn-success' %>
          <%= link_to "Delete Post", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
        </div>
      </div>
    </div>
  </div>
</div>
